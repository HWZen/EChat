<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <welcome-file-list>
        <welcome-file>/WEB-INF/pages/login.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>activate.LoginActivate</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login.jhtml</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>code</servlet-name>
        <servlet-class>activate.CodeActivate</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>code</servlet-name>
        <url-pattern>/code.jhtml</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Message</servlet-name>
        <servlet-class>activate.MessageActivate</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Message</servlet-name>
        <url-pattern>/message.jhtml</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UserContent</servlet-name>
        <servlet-class>activate.UserActivate</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserContent</servlet-name>
        <url-pattern>/userContent.jhtml</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>activate.RegisterActivate</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/register.jhtml</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>PersonalSetting</servlet-name>
        <servlet-class>activate.PersonalSettingActivate</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PersonalSetting</servlet-name>
        <url-pattern>/personalSetting.jhtml</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>GroupSetting</servlet-name>
        <servlet-class>activate.GroupSettingActivate</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GroupSetting</servlet-name>
        <url-pattern>/groupSetting.jhtml</url-pattern>
    </servlet-mapping>

</web-app>

